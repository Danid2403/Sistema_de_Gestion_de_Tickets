@model Entidades.sp_ObtenerUsuarioPorId_Result

@{
    ViewBag.Title = "Detalles del Usuario";
}

<h2>Detalles del Usuario</h2>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Nombre</dt>
        <dd>@Model.Nombre</dd>

        <dt>Cédula</dt>
        <dd>@Model.Cedula</dd>

        <dt>Departamento</dt>
        <dd>@Model.Departamento</dd>

        <dt>Contacto</dt>
        <dd>@Model.Contacto</dd>

        <dt>Correo</dt>
        <dd>@Model.Correo</dd>

        <dt>Tipo</dt>
        <dd>@Model.Tipo</dd>

        <dt>Rol</dt>
        <dd>@Model.Rol</dd>

        <dt>Activo</dt>
        <dd>@(Model.Activo.HasValue && Model.Activo.Value ? "Sí" : "No")</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
</p>
