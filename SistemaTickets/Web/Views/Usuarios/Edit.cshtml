@model Entidades.Usuarios

@{
    ViewBag.Title = "Editar Usuario";
}

<h2>Editar Usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nombre)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cedula, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Cedula)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Departamento, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Departamento, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Departamento)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Contacto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Contacto, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Contacto)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Correo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", type = "email" })
            @Html.ValidationMessageFor(m => m.Correo)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Tipo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Tipo)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Rol, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Rol, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Rol)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Activo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBox("Activo", Model?.Activo ?? false)
            @Html.ValidationMessageFor(m => m.Activo)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar cambios" class="btn btn-primary" />
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}
